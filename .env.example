# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/database?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# AWS Configuration
AWS_REGION="us-east-1"
AWS_ACCOUNT_ID="123456789012"

# SMS Configuration (AWS SNS)
SMS_API_KEY="your-sms-api-key"

# WebSocket Configuration
WEBSOCKET_ENDPOINT="wss://your-websocket-api-id.execute-api.us-east-1.amazonaws.com/dev"

# Deployment Stage
STAGE="dev"

# Serverless Configuration
SERVERLESS_REGION="us-east-1"
SERVERLESS_STAGE="dev"

# Optional: Custom Domain
# CUSTOM_DOMAIN="api.yourdomain.com"
# CERTIFICATE_ARN="arn:aws:acm:us-east-1:123456789012:certificate/your-cert-id"

# Optional: VPC Configuration (for RDS in VPC)
# VPC_SECURITY_GROUP_ID="sg-xxxxxxxxx"
# VPC_SUBNET_ID_1="subnet-xxxxxxxxx"
# VPC_SUBNET_ID_2="subnet-yyyyyyyyy"

# Optional: CloudWatch Log Retention
LOG_RETENTION_DAYS="14"

# Optional: Lambda Memory and Timeout
LAMBDA_MEMORY_SIZE="512"
LAMBDA_TIMEOUT="30"